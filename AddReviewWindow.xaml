
<Window x:Class="mywpf.AddReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить отзыв" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding ItemName}" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Text="Текст отзыва:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Text="{Binding ReviewText, UpdateSourceTrigger=PropertyChanged}" 
                 AcceptsReturn="True" AcceptsTab="True" Height="100" Margin="0,20,0,10"/>

        <TextBlock Grid.Row="2" Text="Оценка (1–5):" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="2" 
                  SelectedValue="{Binding Rating, UpdateSourceTrigger=PropertyChanged}" 
                  Margin="0,20,0,10" Width="100" HorizontalAlignment="Left">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
        </ComboBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Margin="0,0,10,0" 
                    Command="{Binding SaveReviewCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    IsDefault="True"/>
            <Button Content="Отмена" Width="80" Click="CancelButton_Click" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>