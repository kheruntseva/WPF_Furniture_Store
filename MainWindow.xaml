<Window x:Class="mywpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:mywpf.Controls"
        xmlns:local="clr-namespace:mywpf"
        xmlns:i="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
        mc:Ignorable="d"
        Title="Каталог товаров" 
        MinHeight="400" MinWidth="600"
        Height="800" Width="1500">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml"/>
                <ResourceDictionary Source="LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Стили для кнопок языка -->
            <Style x:Key="LanguageButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="80"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="Background" Value="#FFDDDDDD"/>
                <Setter Property="BorderBrush" Value="#FF999999"/>
            </Style>

            <!-- Стили для кнопок входа и корзины -->
            <Style x:Key="IconButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="40"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Background" Value="LightGray"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>

            <!-- Стиль для карточек товаров -->
            <Style x:Key="ProductCardStyle" TargetType="Border">
                <Setter Property="Width" Value="400"/>
                <Setter Property="Height" Value="380"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="BorderBrush" Value="Gray"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <!-- Стиль для кнопок с закругленными краями -->
            <Style x:Key="RoundedButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#F0F0F0"/>
                <Setter Property="Foreground" Value="#333333"/>
                <Setter Property="BorderBrush" Value="#CCCCCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="15,5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    CornerRadius="2"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter x:Name="contentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#999999"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#EEEEEE"/>
                                    <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#AAAAAA"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Конвертеры -->
            <local:ImagePathConverter x:Key="ImagePathConverter" />
            <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Хэдер -->
        <Grid Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" MinHeight="150" MaxHeight="200">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="300"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="Auto" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <!-- Логотип и фильтры -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                <Image Width="80" Height="80" Margin="0,0,10,0" 
                       Source="D:\проекты 4 сем\ООП\лаб 4-5\mywpf\source\logo.jpg"
                       Stretch="Uniform" VerticalAlignment="Center"/>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="{Binding Price}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding AvailablePrice}" 
                                  SelectedItem="{Binding PriceFilter}"
                                  Width="120" MinWidth="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ColorLabel}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding AvailableColors}" 
                                  SelectedItem="{Binding SelectedColor}"
                                  Width="120" MinWidth="100"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Поиск и категории -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox Width="300" MinWidth="150" Height="30" Padding="5"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchText.Length}" Value="0">
                                        <Setter Property="Background" Value="#FF893B3B"/>
                                        <Setter Property="ToolTip" Value="Поиск пуст"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SearchText.Length}" Value="50">
                                        <Setter Property="Background" Value="#FF9A9AB4"/>
                                        <Setter Property="ToolTip" Value="Достигнута максимальная длина"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SearchText.Length}" Value="10">
                                        <Setter Property="Background" Value="#FF9BCEA7"/>
                                        <Setter Property="ToolTip" Value="Задана длина 10"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button Content="{Binding Search}" Margin="10,0,0,0" Padding="20,5"
                            Command="{Binding SearchCommand}"/>
                </StackPanel>
                <WrapPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                    <Button Content="{Binding KitchenText}" 
                            Style="{StaticResource RoundedButtonStyle}"
                            Command="{Binding FilterCategoryCommand}" 
                            CommandParameter="{Binding KitchenText}"/>
                    <Button Content="{Binding BedroomText}" 
                            Style="{StaticResource RoundedButtonStyle}"
                            Command="{Binding FilterCategoryCommand}" 
                            CommandParameter="{Binding BedroomText}"/>
                    <Button Content="{Binding BathText}" 
                            Style="{StaticResource RoundedButtonStyle}"
                            Command="{Binding FilterCategoryCommand}" 
                            CommandParameter="{Binding BathText}"/>
                    <Button Content="{Binding AllText}" 
                            Style="{StaticResource RoundedButtonStyle}"
                            Command="{Binding FilterCategoryCommand}" 
                            CommandParameter=""/>
                </WrapPanel>
                <Button Content="Добавить товар" Margin="0,0,0,0" Padding="15,5" HorizontalAlignment="Center"
                        Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Command="{Binding AddProductCommand}"/>
                <Button Content="Управление отзывами" Margin="10,10,0,0" Padding="15,5"
                Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"
                Command="{Binding ManageReviewsCommand}"/>
            </StackPanel>

            <!-- Кнопки языка и иконки -->
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Русский" Style="{StaticResource LanguageButtonStyle}"
                            Command="{Binding ChangeLanguageCommand}" CommandParameter="ru">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width" From="80" To="100" Duration="0:0:0.5" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Height" From="30" To="40" Duration="0:0:0.5" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Content="English" Style="{StaticResource LanguageButtonStyle}"
                            Command="{Binding ChangeLanguageCommand}" CommandParameter="en">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width" From="80" To="100" Duration="0:0:0.5" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Height" From="30" To="40" Duration="0:0:0.5" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Style="{StaticResource IconButtonStyle}" Command="{Binding OpenAuthOrCabinetCommand}" Margin="0,0,30,0">
                        <Image Source="D:\проекты 4 сем\ООП\лаб 4-5\mywpf\bin\Debug\Images\auto.jpg"/>
                    </Button>
                    <Button Style="{StaticResource IconButtonStyle}" Command="{Binding OpenCartCommand}" Margin="0,0,30,0">
                        <Image Source="D:\проекты 4 сем\ООП\лаб 4-5\mywpf\bin\Debug\Images\korz.jpg"/>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="ThemeButton" Content="темная тема" Margin="0,10,0,0" Padding="10,5" Click="ThemeButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1" Background="{DynamicResource PageBackground}" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding FilteredItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding DataContext.OpenProductDetailsCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                   CommandParameter="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <Border.Style>
                                <Style BasedOn="{StaticResource ProductCardStyle}" TargetType="Border">
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="BorderBrush" Value="Maroon"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <Image Source="{Binding Image, Converter={StaticResource ImagePathConverter}}" 
                                       Height="200" 
                                       Margin="0,10,0,0" 
                                       Stretch="Uniform"/>
                                <TextBlock Text="{Binding Name}" 
                                           TextAlignment="Center" 
                                           Margin="5"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap"
                                           Style="{DynamicResource ProductTextStyle}"/>
                                <TextBlock Text="{Binding Description}" 
                                           TextAlignment="Center" 
                                           TextWrapping="Wrap" 
                                           Margin="5"
                                           Style="{DynamicResource ProductTextStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Price, StringFormat=Цена: {0:C}}" 
                                               HorizontalAlignment="Left" 
                                               Margin="5"
                                               Style="{DynamicResource ProductTextStyle}"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Availability}" 
                                               HorizontalAlignment="Center" 
                                               Margin="5"
                                               Style="{DynamicResource ProductTextStyle}"/>
                                    <Button Content="В корзину" 
                                            Grid.Column="2"
                                            HorizontalAlignment="Right" 
                                            Margin="5"
                                            Style="{StaticResource IconOnlyButtonStyle}"
                                            Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Grid.Column="3" 
                                            Content="Редактировать"
                                            HorizontalAlignment="Right" 
                                            Margin="5"
                                            Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=ItemsControl}, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Command="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>