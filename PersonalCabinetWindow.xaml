<Window x:Class="mywpf.PersonalCabinetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Личный кабинет" 
        Height="400" 
        Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- User Name -->
        <TextBlock Grid.Row="0" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10">
            Личный кабинет пользователя: <Run Text="{Binding Username, Mode=OneWay}"/>
        </TextBlock>

        <!-- Order History -->
        <GroupBox Grid.Row="1" 
                  Header="История покупок" 
                  Margin="0,0,0,10">
            <ListView ItemsSource="{Binding OrderHistory}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Name}"/>
                            <TextBlock Grid.Column="1" Text="{Binding Price, StringFormat={}{0:C}}"/>
                            <TextBlock Grid.Column="2" Text="{Binding Category}"/>
                            <TextBlock Grid.Column="3" Text="{Binding PurchaseDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                            <Button Grid.Column="4" Content="Оставить отзыв" Width="90"
                                    Command="{Binding DataContext.AddReviewCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                    CommandParameter="{Binding}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>

        <!-- Close Button -->
        <Button Grid.Row="2" 
                Content="Закрыть" 
                Width="100" 
                HorizontalAlignment="Right" 
                Click="CloseButton_Click"/>
    </Grid>
</Window>