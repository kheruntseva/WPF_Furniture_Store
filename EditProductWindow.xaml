
<Window x:Class="mywpf.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать товар" 
        MinHeight="600" MinWidth="450"
        Height="650" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Style for Labels -->
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- Style for TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="4" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style for ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border CornerRadius="4" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                Background="{TemplateBinding Background}">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" 
                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <ContentPresenter x:Name="ContentSite" 
                                                  Content="{TemplateBinding SelectionBoxItem}"/>
                                <Popup x:Name="Popup" 
                                       IsOpen="{TemplateBinding IsDropDownOpen}">
                                    <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style for Buttons -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="4" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border Background="White" CornerRadius="8" Margin="20" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" 
                       Text="Редактировать товар" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#333333" 
                       Margin="0,0,0,20"/>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Название:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="NameTextBox" Grid.Row="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="2" Text="Описание:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="DescriptionTextBox" Grid.Row="3" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="80"/>

                    <TextBlock Grid.Row="4" Text="Цена:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="PriceTextBox" Grid.Row="5" Text="{Binding PriceText, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Grid.Row="6" Text="Категория:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="CategoryComboBox" Grid.Row="7" SelectedItem="{Binding Category}">
                        <ComboBoxItem Content="Кухня"/>
                        <ComboBoxItem Content="Спальня"/>
                        <ComboBoxItem Content="Ванная"/>
                    </ComboBox>

                    <TextBlock Grid.Row="8" Text="Цвет:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="ColorComboBox" Grid.Row="9" SelectedItem="{Binding Color}">
                        <ComboBoxItem Content="Черный"/>
                        <ComboBoxItem Content="Белый"/>
                        <ComboBoxItem Content="Дерево"/>
                    </ComboBox>

                    <TextBlock Grid.Row="10" Text="Изображение (путь):" Style="{StaticResource LabelStyle}"/>
                    <StackPanel Grid.Row="11" Orientation="Horizontal">
                        <TextBox x:Name="ImageTextBox" Text="{Binding Image, UpdateSourceTrigger=PropertyChanged}" Width="300"/>
                        <Button Content="Обзор..." Click="BrowseImage_Click" Margin="10,0,0,15"/>
                    </StackPanel>

                    <TextBlock Grid.Row="12" Text="Наличие:" Style="{StaticResource LabelStyle}">
                        <TextBlock.ToolTip>
                            <ToolTip Content="Выберите статус наличия: 'В наличии' или 'Нет в наличии'"/>
                        </TextBlock.ToolTip>
                    </TextBlock>
                    <ComboBox x:Name="AvailabilityComboBox" Grid.Row="13" SelectedItem="{Binding Availability}">
                        <ComboBoxItem Content="В наличии"/>
                        <ComboBoxItem Content="Нет в наличии"/>
                    </ComboBox>
                </Grid>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" 
                        Background="#4CAF50" 
                        Click="SaveButton_Click" 
                        Width="100"/>
                <Button Content="Удалить" 
                        Background="#F44336" 
                        Click="DeleteButton_Click" 
                        Width="100"/>
                <Button Content="Отмена" 
                        Background="#757575" 
                        Click="CancelButton_Click" 
                        Width="100"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>