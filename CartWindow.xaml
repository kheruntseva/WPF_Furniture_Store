<Window x:Class="mywpf.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mywpf"
        mc:Ignorable="d"
        Title="Корзина" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Ваша корзина" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- Список товаров в корзине -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding LoggedInUser.PurchasedProducts}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" 
                                BorderThickness="1" 
                                Margin="5" 
                                Padding="5" 
                                CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Image, Converter={StaticResource ImagePathConverter}}" 
                                       Width="100" 
                                       Height="100" 
                                       Margin="5" 
                                       Stretch="Uniform"/>
                                <StackPanel Orientation="Vertical" Margin="5">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="16"/>
                                    <TextBlock Text="{Binding Price, StringFormat=Цена: {0:C}}" 
                                               FontSize="14"/>
                                    <TextBlock Text="{Binding Color, StringFormat=Цвет: {0}}" 
                                               FontSize="14"/>
                                    <TextBlock Text="{Binding Availability, StringFormat=Наличие: {0}}" 
                                               FontSize="14"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Сообщение для пустой корзины -->
       
        <!-- Кнопка "Оплатить корзину" -->
        <Button Grid.Row="2" 
                Content="Оплатить корзину" 
                HorizontalAlignment="Right" 
                Margin="5" 
                Padding="10,5" 
                FontSize="16" 
                Command="{Binding PayForCartCommand}"
                IsEnabled="{Binding LoggedInUser.PurchasedProducts.Count}"/> <!--, Converter={StaticResource CountToBooleanConverter}-->
    </Grid>
</Window>